<section>
    <div class="container">
         <div class="row mt-4" >
              <a href="/admin/addproducts" class="btn btn-success ml-auto">ADD Product</a>
         </div>
         <div class="mt-4">
            <table class="table mt-5" id="productstable">
                <thead>
                    <tr>
                        <th scope="col">NO</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">image</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 50px;height:50px" src="/productimages/{{this._id}}.jpg" alt=""></td>
                        <td>
                            <a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('are you really want to delete {{this.name}} ?')">Delete</a>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
<script>
    $(function () {
        $('#productstable').DataTable();
    });
</script>