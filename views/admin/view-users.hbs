<section>
    <div class="container mt-5" style="background: rgb(199, 198, 197);">
        <div class="row">
        </div>
        <div class="mt-3">
            <table class="table " id="productstable">
                <thead>
                    <tr>

                        <th scope="col">Name</th>
                        <th scope="col">email</th>
                     
                       
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>

                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                   
                        
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</section>
<script>
    $(function () {
        $('#productstable').DataTable();
    });
</script>